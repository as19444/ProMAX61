@* CAROUSEL *@
<div id="absCarousel" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#absCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#absCarousel" data-slide-to="1"></li>
        <li data-target="#absCarousel" data-slide-to="2"></li>
        <li data-target="#absCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/Content/Images/DubaiSkyline1.jpg" alt="Dubai Skyline 1" />
            <div class="carousel-caption">
                <h1>shortbooking.net</h1>
                <h3>Dubai Night Sky</h3>
            </div>
        </div>
        <div class="item">
            <img src="~/Content/Images/DubaiSkyline2.jpg" alt="Dubai Skyline 2" />
            <div class="carousel-caption">
                <h1>shortbooking.net</h1>
                <h3>Sh Zayed Road Properties</h3>
            </div>
        </div>
        <div class="item">
            <img src="~/Content/Images/DubaiSkyline3.jpg" alt="Dubai Skyline 3" />
            <div class="carousel-caption">
                <h1>shortbooking.net</h1>
                <h3>Dubai Marina Properties</h3>
            </div>
        </div>
        <div class="item">
            <img src="~/Content/Images/DubaiSkyline4.jpg" alt="Dubai Skyline 4" />
            <div class="carousel-caption">
                <h1>shortbooking.net</h1>
                <h3>Dubai Desert Excursions</h3>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#absCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#absCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

