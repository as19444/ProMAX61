@* Contact Us *@
<div class="container" id="contact">
    <hr /><br />
    <h1 class="text-center">Contact Us</h1>

    <div class="col-md-4" style="border-right: solid 1px; border-right-color:lightgray;">
        <h2>Short Booking Holiday Homes Rental llc </h2>
        <p><span class="glyphicon glyphicon-map-marker"></span> Dubai, UAE</p>
        <p><span class="glyphicon glyphicon-phone"></span> Phone: +9714 1234567</p>
